<%- include("header") -%>

  <div class="box" id="heading">
    <h1 class = "title"> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(items){ %>
      <form class="" action="/del" method="post">
        <div class="item">
            <input type="checkbox" name = "checked" value = "<%=  items._id  %>"onChange="this.form.submit()">
          <p><%=  items.name  %></p>
          <input type="hidden" name="classList" value="<%=listTitle%>">
        </div>
      </form>
      <% }); %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button class = "myButton" type="submit" name="list" value = "<%= listTitle %>"><span class = "addBtn"></span>+</button>
      </form>
  </div>

<%- include("footer") -%>
